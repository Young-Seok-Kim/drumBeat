<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NumberTextView">
        <item name="android:layout_width">@dimen/number_text_width</item>
        <item name="android:layout_height">@dimen/number_text_height</item>
        <item name="android:textSize">@dimen/number_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NumberImageView">
        <item name="android:layout_width">@dimen/number_image_width</item>
        <item name="android:layout_height">@dimen/number_image_height</item>
        <item name="android:layout_marginTop">@dimen/number_image_margin_top</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="RemainingTimeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>

